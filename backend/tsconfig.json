{
  "compilerOptions": {
    "lib": ["esnext"],
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2022",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "checkJs": false,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["./*"]
    },
  },
  "include": ["./"],
  "exclude": ["node_modules", "dist", "drizzle.config.ts"]
}
